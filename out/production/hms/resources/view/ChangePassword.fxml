<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="changePane" prefHeight="430.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.hms.controller.ChangePasswordFormController">
   <children>
      <Label layoutX="99.0" layoutY="37.0" text="Change Your Username And Password">
         <font>
            <Font name="Britannic Bold" size="23.0" />
         </font>
      </Label>
      <Label layoutX="155.0" layoutY="109.0" text="New Username &amp; Password">
         <font>
            <Font name="Britannic Bold" size="23.0" />
         </font>
      </Label>
      <Label layoutX="55.0" layoutY="200.0" text="New Username">
         <font>
            <Font name="Bodoni MT" size="17.0" />
         </font>
      </Label>
      <Label layoutX="55.0" layoutY="248.0" text="New Password">
         <font>
            <Font name="Bodoni MT" size="17.0" />
         </font>
      </Label>
      <TextField fx:id="newUsername" layoutX="218.0" layoutY="198.0" prefHeight="26.0" prefWidth="265.0" />
      <TextField fx:id="newPassword" layoutX="218.0" layoutY="245.0" prefHeight="26.0" prefWidth="265.0" />
      <Button layoutX="414.0" layoutY="323.0" mnemonicParsing="false" onAction="#changeClickOnAction" text="Change">
         <font>
            <Font name="Broadway" size="12.0" />
         </font>
      </Button>
      <ImageView fx:id="imgPasswordView" fitHeight="26.0" fitWidth="26.0" layoutX="458.0" layoutY="245.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/icons8-eye-24.png" />
         </image>
      </ImageView>
      <Label fx:id="shownPassword" layoutX="222.0" layoutY="277.0" prefHeight="18.0" prefWidth="177.0" />
      <ToggleButton fx:id="toggleButton" layoutX="458.0" layoutY="245.0" mnemonicParsing="false" onAction="#passwordFieldKeyTyped" prefHeight="26.0" prefWidth="25.0" text="ToggleButton" />
      <AnchorPane fx:id="confirmPane" prefHeight="430.0" prefWidth="600.0" style="-fx-background-color: #c9deff;">
         <children>
            <Label layoutX="99.0" layoutY="37.0" text="Change Your Username And Password">
               <font>
                  <Font name="Britannic Bold" size="23.0" />
               </font>
            </Label>
            <Label layoutX="210.0" layoutY="106.0" text="Confirm User">
               <font>
                  <Font name="Britannic Bold" size="23.0" />
               </font>
            </Label>
            <Label layoutX="55.0" layoutY="200.0" text="Current Username">
               <font>
                  <Font name="Bodoni MT" size="17.0" />
               </font>
            </Label>
            <Label layoutX="55.0" layoutY="248.0" text="Current Password">
               <font>
                  <Font name="Bodoni MT" size="17.0" />
               </font>
            </Label>
            <TextField fx:id="currentUsername" layoutX="218.0" layoutY="198.0" prefHeight="26.0" prefWidth="265.0" />
            <TextField fx:id="currentPassword" layoutX="218.0" layoutY="245.0" prefHeight="26.0" prefWidth="265.0" />
            <Button layoutX="6.0" layoutY="4.0" mnemonicParsing="false" onAction="#btnBackOnAction" text="Back" />
            <Button fx:id="btnconfirm" layoutX="414.0" layoutY="323.0" mnemonicParsing="false" onAction="#confirmClickOnAction" text="Confirm User">
               <font>
                  <Font name="Broadway" size="12.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
